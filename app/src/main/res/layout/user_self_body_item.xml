<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffd9d9d9" android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:padding="10dp">
    <ImageButton
        android:id="@+id/left_image"
        android:layout_alignParentLeft="true"
        android:src="@drawable/dz_personal_message"
        android:scaleType="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/left_text"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/left_image"
        android:text="@string/mc_forum_draft_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:id="@+id/right_image"
        android:layout_alignParentRight="true"
        android:src="@drawable/dz_list_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>