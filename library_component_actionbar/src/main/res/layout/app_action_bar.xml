<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_bar_background"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_action_bar_height"
    android:background="@color/white_title">

    <TextView
        android:id="@+id/action_bar_left_title"
        style="@style/action_bar_subtitle"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/action_bar_left_icon"
        style="@style/action_bar_left_icon"/>

    <TextView
        android:id="@+id/action_bar_center_title"
        style="@style/action_bar_title"/>

    <TextView
        android:id="@+id/action_bar_right_title"
        style="@style/action_bar_subtitle"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:id="@+id/action_bar_right_icon"
        style="@style/action_bar_right_icon"/>

</RelativeLayout>
