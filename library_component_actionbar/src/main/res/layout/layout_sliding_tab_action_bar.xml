<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_bar_background"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/white_title">

    <ImageView
        android:id="@+id/action_bar_left_icon"
        style="@style/action_bar_left_icon"/>

    <com.liwushuo.gifttalk.component.views.SlidingTabLayout
        android:id="@+id/action_bar_sliding_tab"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/action_bar_right_title"
        style="@style/action_bar_subtitle" />

</RelativeLayout>
