<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="action_bar_left_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:src">@drawable/btn_back_white</item>
    </style>

    <style name="action_bar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white_title</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <style name="action_bar_subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/selector_action_bar_subtitle</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="action_bar_right_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:padding">5dp</item>
    </style>

    <!--分割线,暂时不用-->
    <style name="action_bar_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/grey_line</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

</resources>